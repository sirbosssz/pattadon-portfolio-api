generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profiles {
  id           String   @id @default(uuid())
  authId       String   @unique
  email        String   @unique
  fullname     String
  introduction String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  currentPositionId   String?
  currentPosition     Positions?                   @relation(fields: [currentPositionId], references: [id])
  lookingForPositions ProfileLookingForPositions[]

  @@map("profiles")
}

model Positions {
  id   String @id @default(uuid())
  name String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profileThatLookingFor   ProfileLookingForPositions[]
  profileThatCurrentlyHas Profiles[]

  @@map("positions")
}

model ProfileLookingForPositions {
  profileId String
  profile   Profiles @relation(fields: [profileId], references: [id])

  positionId String
  position   Positions @relation(fields: [positionId], references: [id])

  @@id([profileId, positionId])
  @@map("profile_looking_for_positions")
}
