generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Profiles {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  authId    String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fullname  String

  lookingForPositions    Positions[] @relation("LookingForPositions", fields: [lookingForPositionsIds], references: [id])
  lookingForPositionsIds String[]    @db.ObjectId

  currentPosition   Positions? @relation("CurrentPosition")
  currentPositionId String?    @db.ObjectId

  @@map("profiles")
}

model Positions {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  profileThatLookingFor Profiles[] @relation("LookingForPositions", fields: [profileLookingForId], references: [id])
  profileLookingForId   String[]  @db.ObjectId

  profileThatCurrentPosition Profiles? @relation("CurrentPosition", fields: [profileCurrentPositionId], references: [id])
  profileCurrentPositionId   String?  @unique @db.ObjectId

  @@map("positions")
}
